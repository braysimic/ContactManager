@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<div style="margin-top: 20px;">
    <h2 style="margin-bottom: 20px;">Confirm Deletion</h2>
    <p style="margin-bottom: 20px;">Do you really want to delete <strong>@Model.FirstName @Model.LastName</strong>?</p>

    <form asp-action="Delete" method="post" style="margin-bottom: 20px;">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

