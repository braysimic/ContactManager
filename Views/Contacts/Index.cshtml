@model IEnumerable<ContactManager.Models.Contact>

@{
    ViewData["Title"] = "Contact List";
}

<div style="background-color: black; color: white; padding: 10px; margin: 20px 0; text-align: center;">
    <h2>Contact Manager</h2>
</div>

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@contact.ContactId">@contact.FirstName</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@contact.ContactId">@contact.LastName</a>
                </td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contact.ContactId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@contact.ContactId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Contact</a>

